volume: "/testdata/routes/"
mapping: "/etc/frr"
routers:
- hostname: H1
  image: "platinasystems/frrouting:7.2.1"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port0"}}
    address:
      - 10.1.0.2/24
      - 2001:db8:1::2/64
  - name: dummy0
    address:
      - 192.168.1.2/32
      - 2001:db8:0:1::2/128
- hostname: R1
  image: "platinasystems/frrouting:7.2.1"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net0port1"}}
    address:
      - 10.1.0.1/24
      - 2001:db8:1::1/64
  - name: {{index . "net1port0"}}
    address:
      - 10.2.0.1/24
      - 2001:db8:2::1/64
- hostname: H2
  image: "platinasystems/frrouting:7.2.1"
  cmd: "/root/startup.sh"
  intfs:
  - name: {{index . "net1port1"}}
    address:
      - 10.2.0.2/24
      - 2001:db8:2::2/64
  - name: dummy0
    address:
      - 192.168.2.2/32
      - 2001:db8:0:2::2/128  

